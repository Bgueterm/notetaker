<div id = "notes_list">
    <% @note.reverse_each do |note| %>
        <div class = "note_info">
            <div class = "upper_box">
                <section class = "id"  >Post: <%= note.id %></section>
                <section class = "date"><%= note.created_at.strftime("%b. %d, %Y - %I:%M %p") %></section>
                <script>
                    if (note.updated_at > note.created_at) {
                        <section class = "edit">Edited: <%= note.updated_at.strftime("%b. %d, %Y - %I:%M %p") %></section>
                    }
                </script>
            </div>
            <p class = "text"><%= note.text %></p>
        </div>
    <% end %>   
</div>
